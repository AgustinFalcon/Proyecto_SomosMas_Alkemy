<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTardeDeportiva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tarde deportiva"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/ivFotoDeportiva"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_somos_mas"
        android:layout_marginTop="16dp"
        app:layout_constraintCircleRadius="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTardeDeportiva"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="agregar texto"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/tvFecha"
        app:layout_constraintLeft_toRightOf="@+id/ivFotoDeportiva"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Publicado: 28/07/21"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>